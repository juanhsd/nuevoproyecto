<h2>Inicio de Sesion</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|%>
  <div class="form-floating mb-15px">
    <%= f.label :email, class:"d-flex align-items-center fs-13px text-gray-600" %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control h-45px fs-13px" %>
  </div>

  <div class="form-floating mb-15px">
    <%= f.label :password, class:"d-flex align-items-center fs-13px text-gray-600" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control h-45px fs-13px" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign me in", class:"btn btn-danger d-block h-45px w-100 btn-lg fs-14px"%>
  </div>
<% end %>
